<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-dark" style="background-image: url(<%= asset_path('Mcbessjardin.png') %>); background-repeat: no-repeat; background-attachment: fixed;">
<nav class="navbar navbar-dark justify-content-around sticky-top" style="background-color: rgba(70, 70, 70, 0.4); backdrop-filter: blur(4px)">
  <form class="form-inline ml-4 mr-4">
    <%= link_to cocktails_path, { class: "btn btn-primary" } do %>
  <span class="label label-primary">All Cocktail</span>
<% end %>
  <form class="form-inline">
    <%= link_to new_cocktail_path, { class: "btn btn-outline-primary" } do %>
  <span class="label label-primary">Add a Cocktail</span>
<% end %>
</nav>
    <%= yield %>
  </body>
</html>
